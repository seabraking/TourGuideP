<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/branco"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">



       <Spinner
           android:id="@+id/spinnerCategory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </Spinner>
        <Spinner
            android:id="@+id/spinnerRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>

        <android.support.v7.widget.SearchView
            android:id="@+id/txtPesquisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesquisa"
            android:layout_gravity="right"
            android:layout_weight="1"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView

            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/branco"
            android:layout_marginTop="@dimen/list_margin"
            android:layout_marginLeft="@dimen/subtitle_margin"
            android:layout_marginRight="@dimen/subtitle_margin"
            android:layout_marginBottom="@dimen/subtitle_margin"
            android:divider="@color/branco"></ListView>



        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/lista_vazia"></TextView>

        <Button
            android:id="@+id/btn_NewLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:text="Adicionar"
            android:layout_marginRight="20dp"
            android:textColor="@color/branco"
            android:paddingRight="5dp"
            android:background="@drawable/rounded_corner"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


    </LinearLayout>